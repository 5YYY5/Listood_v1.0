<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Fragment4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/blue2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Имя"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btthem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue2_80"
                android:text="Темы" />

            <Button
                android:id="@+id/btacc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue2_80"
                android:text="Аккаунт" />

            <Button
                android:id="@+id/btinstr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue2_80"
                android:text="Инструкция" />

            <Button
                android:id="@+id/btsett1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue2_80"
                android:text="Настройки1" />

            <Button
                android:id="@+id/btsett2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue2_80"
                android:text="Настройки2" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/containerset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>