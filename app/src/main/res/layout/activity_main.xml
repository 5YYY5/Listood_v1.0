<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fr_main_place"
        android:name="com.example.listood_v10.MainScreen_Fragments.Fragment1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:background="@color/blue3"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </LinearLayout>

    <ImageButton
        android:id="@+id/bt1"
        style="@style/Style_Activity_Buttons"
        android:layout_marginTop="1dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@id/bt2"
        app:layout_constraintStart_toStartOf="@+id/fr_main_place"
        app:layout_constraintTop_toTopOf="@+id/linearLayout3"
        app:srcCompat="@drawable/calendar"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/bt2"
        style="@style/Style_Activity_Buttons"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@id/bt3"
        app:layout_constraintStart_toEndOf="@id/bt1"
        app:layout_constraintTop_toTopOf="@+id/bt1"
        app:srcCompat="@drawable/editing"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/bt3"
        style="@style/Style_Activity_Buttons"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@id/bt4"
        app:layout_constraintStart_toEndOf="@id/bt2"
        app:layout_constraintTop_toTopOf="@+id/bt1"
        app:srcCompat="@drawable/chat"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/bt4"
        style="@style/Style_Activity_Buttons"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/fr_main_place"
        app:layout_constraintStart_toEndOf="@id/bt3"
        app:layout_constraintTop_toTopOf="@+id/bt1"
        app:srcCompat="@drawable/menu"
        tools:ignore="SpeakableTextPresentCheck" />



</androidx.constraintlayout.widget.ConstraintLayout>